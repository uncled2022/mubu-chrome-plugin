{
  "name": "幕布小助手",
  "description": "获取幕布文章下载到本地",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "cookies"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}